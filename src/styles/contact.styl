.map
  width 100%
  height 30vw

.address
  width 100%
  height auto

.address-wrapper
  width 80%
  height auto
  margin 0 auto

ul.address-list
  list-style-type none
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  align-items center
  padding 0

li.address-item
  width 31%
  margin 5vw 1% 5vw 1%
  height auto
  text-align: center;
  color: gray;

.form
  width 50%
  height auto
  margin 0 auto
  padding 1.5vw 0 2.5vw 0
  text-align center

span.title-text-form
  font-size 24px
  color rgb(173,227,227)
  font-weight 400

input[type="text"], input[type="tel"], textarea
  background: #fff;
  width: 100%;
  border: 1px solid gray;
  margin: .3vw 0;
  resize: none;
  padding: .5vw;
  border-radius: 0
  -webkit-appearance: none;

.form-title
  padding: 1.5vw 0;

input.hvr-grow
  background: rgb(173,227,227);
  padding: .5vw;
  color: #fff;
  position: relative;
  border none
  float right
  margin-right -5%
  border-radius: 0
  -webkit-appearance: none;

@media (max-width 1024px)

  .form
    width 60%

  input[type=text], input[type=tel], textarea
    margin .5vw 0

  .map
    height 40vw

  input.hvr-grow
    margin-right: -3.5%

@media (max-width 768px)
  li.address-item
    width 45%

  .form
    width 65%
    padding: 1.5vw 0 4.5vw

  input[type=text], input[type=tel], textarea
    margin 1vw 0

  .map
    height 70vw

  input.hvr-grow
    padding: 1vw

@media (max-width 640px)

  .form
    width 70%
    padding: 1.5vw 0 5.5vw

  input[type=text], input[type=tel], textarea
    margin 1.4vw 0

  .map
    height 75vw

@media (max-width 480px)

  li.address-item
    width 100%
    margin-bottom 8vw

  .form
    width 75%
    padding: 1.5vw 0 6.5vw

  input[type=text], input[type=tel], textarea
    margin 1.8vw 0

  .map
    height 85vw

  input.hvr-grow
    margin-right: -2.5%

@media (max-width 320px)
  .form
    width 85%
    padding: 1.5vw 0 7.5vw

  .map
    height 90vw
