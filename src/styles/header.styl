
header
  width 100%
  height auto
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-bottom 2px solid gray
  background-color: #fff
  height: 10vw

div.logo-header
  width 100%
  height auto
  text-align center

.logo-header svg
  width 150px
  height auto
  padding 1vw 0 .5vw 0

.menu-header
  width 100%
  height auto
  display flex
  justify-content center

ul.menu-list
  list-style-type none
  width 35%
  height auto
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  padding 0

li.menu-item a
  font-size 14px
  color gray
  text-decoration none
  transition .3s

li.menu-item a.selected
  color rgb(241,169,176)

li.menu-item a:hover
  color rgb(241,169,176)

.social
  display flex
  flex-direction row
  justify-content space-between
  width 100px
  height auto
  position absolute
  right 1%
  bottom 1%

.social-icon a svg
  width 20px
  height 20px


@media(min-width 1680px)
  li.menu-item a
    font-size 16px

@media(max-width 1280px)
  header
    height: 12vw

@media(max-width 1024px)
  li.menu-item a
    font-size 14px

  ul.menu-list
    width 45%

  header
    height: 14vw

@media(max-width 768px)
  ul.menu-list
    width 55%

  li.menu-item a
    font-size 12px

  .social
    display none

  header
    position fixed
    z-index: 8

  .logo-header svg
    margin 0
    padding: 0
    margin-top 3vw

  header,.margin-responsive
    height: 18vw

@media(max-width 640px)
  ul.menu-list
    width 65%

  header,.margin-responsive
    height: 22vw

@media(max-width 480px)
  ul.menu-list
    width 93%

  .logo-header img
    padding: 5vw 0 0vw 0

  header,.margin-responsive
    height: 30vw

@media(max-width 320px)
  ul.menu-list
    width 95%

  header,.margin-responsive
    height: 33vw
