
header
  width 100%
  height auto
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items center
  border-bottom 2px solid gray
  background-color: #fff

div.logo-header
  width 100%
  height auto
  text-align center

.logo-header svg
  width 150px
  height auto
  padding 1vw 0 .5vw 0

.menu-header
  width 100%
  height auto
  display flex
  justify-content center

ul.menu-list
  list-style-type none
  width 35%
  height auto
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  padding 0

li.menu-item a
  font-size 14px
  color gray
  text-decoration none
  transition .3s

li.menu-item a.selected
  color rgb(241,169,176)

li.menu-item a:hover
  color rgb(241,169,176)

.social
  display flex
  flex-direction row
  justify-content space-between
  width 100px
  height auto
  position absolute
  right 1%
  bottom 1%

.social-icon a svg
  width 20px
  height 20px


@media(min-width 1680px)
  li.menu-item a
    font-size 16px

@media(max-width 1024px)
  li.menu-item a
    font-size 14px

  ul.menu-list
    width 45%

@media(max-width 768px)
  ul.menu-list
    width 55%

  li.menu-item a
    font-size 12px

  .social
    bottom 0
    top 5%
    right 2%
    display none

  header
    position fixed
    z-index: 8

  .logo-header svg
    margin 0
    padding: 0
    margin-top 3vw

