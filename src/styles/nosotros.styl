.nosotros
  width 100%
  height auto

.top-nosotros
  position relative
  width 100%
  height 30.8vw
  background-image url('../img/banner1-01.png')
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;

.box-wrapper
  position absolute
  top 0
  opacity .8
  width 60%
  height 80%
  left 20%
  top 10%
  background-color rgba(75,74,77,.8)
  margin 0 auto


.nosotros-logo svg
  width 160px
  height 84px
  margin-left 5%

p.text-nosotros
  color: #fff;
  width: 80%;
  text-align: justify;
  float: right;
  margin-right: 5%;
